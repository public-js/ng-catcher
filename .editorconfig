root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[{*.js,*.ts}]
quote_type = single

[{*.json, *.yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
